<!DOCTYPE html>
<html lang="en">
<head>
  <title>Registration Page</title>
  <!-- includes the links for style sheets and  -->
  <%- include('./templates/headLinks'); %>

</head>
<body>

<!-- include for the navbar -->
<%- include('./templates/header'); %>

<!-- Start of Form! -->
<div class="container-fluid centered" style="padding: 38px;">

  <h2>Register for Playlist Manager!</h2>
  <form action="/users/register" method="post">
    <div class = "form-group col-lg-8">
      <label class="col-lg-2 control-label">First Name:</label>
      <div class="col-lg-4">
        <input type="text" class="form-control" name="first_name"  placeholder="First Name">
      </div>
    </div>
    <div class = "form-group col-lg-8">
      <label  class="col-lg-2 control-label">Last Name:</label>
      <div class="col-lg-4">
        <input type="text" class="form-control" name="last_name"  placeholder="Last Name">
      </div>

    </div>

    <div class="form-group col-lg-8">
      <label  class="col-lg-2 control-label">Email Adddress:</label>
      <div class="col-lg-4">
        <input type="text" class="form-control" name="email" placeholder="Email Address">
      </div>
    </div>

    <div class="form-group col-lg-8">
      <label  class="col-lg-2 control-label">Username:</label>
      <div class="col-lg-4">
        <input type="text" class="form-control" name="username" placeholder="Username">

      </div>
    </div>

    <div class="form-group col-lg-8">
      <label  class="col-lg-2 control-label">Password:</label>
      <div class="col-lg-4">
        <input type="password" name="password" class="form-control"  placeholder="Please Enter a Password!">
      </div>
    </div>
    <div class="form-group col-lg-8">
        <label  class="col-lg-2 control-label">Confirm Password:</label>
        <div class="col-lg-4">
          <input type="password" name="password2" class="form-control"  placeholder="Confirm Password!">

        </div>
    </div>
    <div class="form-group col-lg-8">
      <div class="col-lg-10 col-lg-offset-2">
        <button type="submit" name="button" class="btn btn-success" >Submit</button>
      </div>
    </div>
  </form>

</div>

<!-- include for the footer -->
<%- include('./templates/footer'); %>
<%- include('./templates/bodyScript'); %>

</body>
</html>
